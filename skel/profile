export PAGER='/bin/less -R'
export EDITOR='/bin/vi'
export PS1='\u@\h \w> '

# Source configuration files from /etc/profile.d
for i in /etc/profile.d/*.sh ; do
	if [ -r "$i" ]; then
		. $i
	fi
	unset i
done

# Common interactive aliases
alias ls='ls --color=auto -Fh'
alias ll='ls -l'
alias la='ls -la'

alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'
